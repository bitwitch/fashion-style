<%= form_for @user do |f| %>
  <%= image_tag('one.jpg', alt: 'icon 1') %>
  <%= f.radio_button :image, 'one.jpg' %>

  <%= image_tag('two.jpg', alt: 'icon 2') %>
  <%= f.radio_button :image, 'two.jpg' %>

  <%= image_tag('three.jpg', alt: 'icon 3') %>
  <%= f.radio_button :image, 'three.jpg' %>

  <%= image_tag('four.jpg',  alt: 'icon 3') %>
  <%= f.radio_button :image, 'four.jpg' %><br>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :age %>
  <%= f.number_field :age %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :style_description %>
  <%= f.text_area :style_description %><br>
  <%= f.submit "Update Profile" %>
<% end %>