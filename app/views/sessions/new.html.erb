<div class="full">
  <div class="mixmatch">
    <h1><%= link_to 'MIXMATCH', welcome_path %></h1>
  </div>

  <div class="error">
   <%= flash[:error] if flash[:error]%>
 </div>

  <div class='access-form-wrapper'>
    <div class='access-form-wrap'>
      <div class="access-form">
        <%= form_tag sessions_path do %>
          <div class="entry">
            <%= label_tag :username %>
            <%= text_field_tag :username %><br>
          </div>

          <div class="entry">
            <%= label_tag :password  %>
            <%= password_field_tag :password %><br>
          </div>

          <%= submit_tag "Login", class: 'login-button' %>
        <% end %>
      </div>
    </div>
  </div>

</div>
