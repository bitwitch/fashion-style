<div class="search-results">
  <ul>
    <% @products.each do |product| %>
      <li>
        <div class="product-image">
          <%= link_to image_tag(product['image']['url']), style_path(style: {type: 'pants', pants_url: product['image']['url']}, color: product["color"]) %>
        </div>

        <div class="product-name">
          <%= product['name'].split.slice(0..-3).join(" ") %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<br>

<div class="pages">
  <ul>
    <li><%= link_to "1", page_path(type: 'pants', page: 1) %></li>
    <li><%= link_to "2", page_path(type: 'pants', page: 2) %></li>
    <li><%= link_to "3", page_path(type: 'pants', page: 3) %></li>
    <li><%= link_to "4", page_path(type: 'pants', page: 4) %></li>
    <li><%= link_to "5", page_path(type: 'pants', page: 5) %></li>
  </ul>
</div>
